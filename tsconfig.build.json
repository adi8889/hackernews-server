{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "dist",
    "rootDir": "src", // Ensure this is set to "src"
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": false
  },
  "include": ["src/**/*"], // Ensure all files in src are included
  "exclude": ["node_modules", "**/*.test.ts"]
}